.clothes {
  position: relative;
}
.clothes .clothes_infor {
  background-color: #FF8C69;
  color: #fff;
  height: 300rpx;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  font-weight: bold;
}
.clothes .clothes_infor view {
  width: 200px;
  height: 40px;
  line-height: 40px;
  margin-left: 10px;
  border-radius: 5px;
}
.clothes .clothes_type {
  position: absolute;
  top: 270rpx;
  right: 30rpx;
  border-radius: 10px;
  background-color: #FCFCFC;
  width: 670rpx;
  padding: 40rpx 8rpx;
  border: 1px solid #eee;
}
.clothes .clothes_type .recover_title {
  font-size: 40rpx;
}
.clothes .clothes_type .recover_pro {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 30rpx;
}
.clothes .clothes_type .recover_pro view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 60rpx;
}
.clothes .clothes_type .recover_pro view text {
  font-size: 30rpx;
}
.clothes .clothes_btn {
  position: fixed;
  bottom: 0;
  height: 80px;
  width: 100%;
  border: 1px solid #eee;
}
.clothes .clothes_btn button {
  position: absolute;
  bottom: 15px;
  right: 30px;
  background-color: #FF8C69;
  width: 450rpx;
  height: 50px;
  color: #fff;
  text-align: center;
}

