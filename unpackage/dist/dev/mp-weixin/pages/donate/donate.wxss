.donate-wrapper {
  position: relative;
  height: 100%;
}
.donate-wrapper .donate_address_wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 10px 0px;
}
.donate-wrapper .donate_address_wrapper .donate-address {
  height: 40px;
  line-height: 40px;
  text-align: center;
  width: 200px;
  background-color: #ff3333;
  border: 1px solid #f0f0f0;
  color: #fff;
}
.donate-wrapper .donate_address_wrapper .donate-address .choose_address {
  font-size: 13px;
}
.donate-wrapper .step {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20px 10px;
  border-top: 8px #f5f5f5 solid;
}
.donate-wrapper .step .step_item {
  height: 300px;
  width: 100%;
}
.donate-wrapper .step .step_item .uni-steps .uni-steps__column .uni-steps__column-text-container {
  padding: 10px 0px;
}
.donate-wrapper .step .step_item .uni-steps .uni-steps__column .uni-steps__column-text-container .uni-steps__column-text {
  height: 40px;
  line-height: 20px;
}
.donate-wrapper .step .step_item .uni-steps .uni-steps__column .uni-steps__column-text-container .uni-steps__column-text .uni-steps__column-title {
  font-size: 12px;
}
.donate-wrapper .step .step_item .uni-steps .uni-steps__column .uni-steps__column-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.donate-wrapper .step .step_item .uni-steps .uni-steps__column .uni-steps__column-container .uni-steps__column-line-item {
  height: 40px;
  padding: 10px 0px;
}
.donate-wrapper .confirm_order {
  position: fixed;
  bottom: 0;
  left: 0;
