.update-input{-webkit-box-flex: 7;-webkit-flex: 7;flex: 7;display: -webkit-box;display: -webkit-flex;display: flex;padding: 3.5%;}
/* 箭头 */
.jt{height:30rpx;width:30rpx;margin: auto;margin-right: 20rpx;}
/* 详情 */
.detail{background-color: #fff;width: 100%;height: 200rpx;padding: 2%;}

