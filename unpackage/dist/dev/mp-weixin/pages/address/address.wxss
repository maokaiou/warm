
page{background-color: #f1f1f1;}
/* 提示 */
.mind{color: #ccc;font-size: 24rpx;margin:3%;}
text{margin:1%;}
/* 所在地区 */
.update-message{background-color: #fff;height:95rpx;line-height: 95rpx;font-size: 32rpx;display: -webkit-box;display: -webkit-flex;display: flex;border-bottom:2rpx solid #e4e4e4;}
